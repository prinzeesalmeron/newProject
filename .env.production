# Production Environment Configuration
# DO NOT commit actual credentials to Git
# Use environment variables in hosting platform

# Environment
NODE_ENV=production
VITE_APP_ENV=production

# API URLs
VITE_SUPABASE_URL=https://production-project-id.supabase.co
VITE_SUPABASE_ANON_KEY=your-production-anon-key-here

# Stripe (Live Mode)
VITE_STRIPE_PUBLIC_KEY=pk_live_your-production-key-here

# Blockchain Network (Ethereum Mainnet)
VITE_NETWORK_NAME=mainnet
VITE_CHAIN_ID=1
VITE_RPC_URL=https://mainnet.infura.io/v3/your-project-id

# Contract Addresses (Production - Mainnet)
# IMPORTANT: Verify these addresses before deployment
VITE_PROPERTY_TOKEN_ADDRESS=0x0000000000000000000000000000000000000000
VITE_MARKETPLACE_ADDRESS=0x0000000000000000000000000000000000000000
VITE_GOVERNANCE_ADDRESS=0x0000000000000000000000000000000000000000
VITE_STAKING_ADDRESS=0x0000000000000000000000000000000000000000

# Monitoring (Production)
VITE_SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id
VITE_SENTRY_ENVIRONMENT=production

# Analytics
VITE_MIXPANEL_TOKEN=your-production-mixpanel-token

# Feature Flags
VITE_ENABLE_MFA=true
VITE_ENABLE_KYC=true
VITE_ENABLE_STAKING=true
VITE_ENABLE_GOVERNANCE=true

# Limits (Production)
VITE_MAX_TRANSACTION_AMOUNT=1000000
VITE_DAILY_TRANSACTION_LIMIT=10000000
VITE_RATE_LIMIT_PER_MINUTE=30

# Debug (Disabled in production)
VITE_DEBUG_MODE=false
VITE_SHOW_TEST_DATA=false
